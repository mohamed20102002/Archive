{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "vite.config.ts",
    "electron.vite.config.ts",
    "src/main/**/*",
    "src/preload/**/*"
  ]
}
