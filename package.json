{
  "name": "project-data-archiving-system",
  "version": "1.0.1",
  "author": {
    "name": "Mohamed Darwish",
    "company": "NPPA"
  },
  "description": "Portable, offline-first desktop application for archiving departmental emails and records",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:portable": "electron-vite build && electron-builder --win dir --config.win.signAndEditExecutable=false",
    "build:portable:zip": "electron-vite build && electron-builder --win dir --config.win.signAndEditExecutable=false && node -e \"const{execSync}=require('child_process');const p=require('path');const v=require('./package.json').version;execSync(`${p.join('node_modules','7zip-bin','win','x64','7za.exe')} a -tzip release/Project-Data-Archiving-System-${v}-portable.zip release/win-unpacked/*`,{stdio:'inherit'})\"",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "publish": "electron-vite build && dotenv -- electron-builder --win nsis --publish always",
    "publish:draft": "electron-vite build && dotenv -- electron-builder --win nsis --publish onTagOrDraft",
    "typecheck": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "seed": "node scripts/seed-data.js",
    "seed:small": "node scripts/seed-data.js 5 10",
    "seed:large": "node scripts/seed-data.js 50 100"
  },
  "dependencies": {
    "@react-three/drei": "^9.88.0",
    "@react-three/fiber": "^8.15.19",
    "archiver": "^7.0.1",
    "argon2": "^0.31.0",
    "better-sqlite3": "^9.2.0",
    "date-fns": "^3.0.0",
    "docx": "^9.5.1",
    "jsonwebtoken": "^9.0.0",
    "pdfmake": "^0.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "recharts": "^3.7.0",
    "three": "^0.152.0",
    "uuid": "^9.0.0",
    "winax": "^3.4.2",
    "xlsx": "^0.18.5",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@electron-forge/maker-wix": "^7.11.1",
    "@types/archiver": "^7.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.182.0",
    "@types/uuid": "^9.0.0",
    "@types/yauzl": "^2.10.3",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "dotenv-cli": "^11.0.0",
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.archive.project-data",
    "productName": "Project Data Archiving System",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/app-update.yml",
        "to": "app-update.yml"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "mohamed20102002",
      "repo": "Archive",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "differentialPackage": true
    }
  }
}
